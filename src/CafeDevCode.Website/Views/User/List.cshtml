@using CafeDevCode.Database.Entities
@using CafeDevCode.Logic.Shared.Models
@model IEnumerable<UserSummaryModel>

@if (Model != null && 
     Model.Any())
{
    foreach (var user in Model)
    {
        <tr>
            <td style=" text-align: left">
                @user.UserName</td>
            <td style=" text-align: left">
                @user.Email</td>
            <td style=" text-align: left">
                @user.PhoneNumber</td>
            <td style=" text-align: left">
                @user.AuthorId</td>
            <td style=" text-align: left">
                <a class="btn btn-success d-inline" asp-action="Detail" asp-controller="User" asp-route-userName="@user.UserName">
                    <i class="fa-solid fa-arrow-up-right-from-square"></i>
                </a>    
                <button class="btn btn-danger d-inline ms-2" onclick="onDelete(@user.UserName)">
                    <i class="fa-solid fa-trash-can"></i>
                </button>
            </td>
        </tr>
    }
}