@using CafeDevCode.Logic.Shared.Models;
@{
    if (Model.UserName != null)
    {
        ViewData["Title"] = $"Admin - {Model.UserName}";
    }
    else
    {
        ViewData["Title"] = $"Admin - Quản lý người dùng";
    }
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model UserDetailModel
<div class="container-fluid px-4">
    <h1 class="mt-4">
        @{
            if (Model.UserName != null)
            {
            <span class="card-title">@Model.UserName</span>
            }
            else
            {
            <span class="card-title">Thông tin người dùng</span>
            }
        }
    </h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index">Tác giả</a></li>
        <li class="breadcrumb-item active">Chi tiết</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <h3 class="card-title">Thông tin chung</h3>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="Id"/>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-2">
                       
                        <label class="form-label" style="font-weight:bold;">Họ và tên:</label>
                        <input class="form-control" type="text" asp-for="UserName" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-2">
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <label class="form-label" style="font-weight:bold;">Email:</label>
                        <input class="form-control" type="email" asp-for="Email" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-2">
                        <label class="form-label" style="font-weight:bold;">Điện thoại:</label>
                        <input class="form-control" type="number" asp-for="PhoneNumber" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-2">
                        <label class="form-label" style="font-weight:bold;">Mã tác giả:</label>
                        <input class="form-control" type="text" asp-for="AuthorId" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-6 col-md-2">
                    <button type="button" class="btn btn-primary w-100" onclick="onSaveChange()"><i class="fa-solid fa-floppy-disk"></i> Lưu</button>
                </div>
                <div class="col-6 col-md-2">
                    <a class="btn btn-dark w-100" asp-action="Index"><i class="fa-solid fa-xmark"></i> Thoát</a>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    onSaveChange = () => {
        $.ajax({
            type: 'POST',
            url: '@Url.Action("SaveChange")',
            data: {
                Id: $('#Id').val(),
                FullName: $('#FullName').val(),
                Phone: $('#Phone').val(),
                Email: $('#Email').val(),
                ShortName: $('#ShortName').val()
            },
            success: (res) => {
                console.log(res)

                if (res.success === true) {
                    $('#Id').val(res.data.id)
                    swal({
                        title: 'Thành công',
                        text: res.message,
                        icon: 'success'
                    })
                }
                else {
                    swal({
                        title: 'Lỗi',
                        text: res.message,
                        icon: 'error'
                    })
                }
            },
            error: (error) => {
            }
        })
    };
</script>

