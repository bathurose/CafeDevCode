@using CafeDevCode.Website.Models.User
@{
    ViewData["Title"] = "Dang nhap";
    Layout = "~/Views/Shared/_AdminAuthenticateLayout.cshtml";
}
@model LoginViewModel
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">

                <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Đăng nhập</h3></div>
                <div class="card-body">
                    @{
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            var messages = Model.ErrorMessage.Split("\r\n");
                            <ul>
                              
                                @foreach (var message in messages)
                                {
                                    if (!string.IsNullOrEmpty(message))
                                    { 
                                    <li class="text-danger mb-1">
                                        @message
                                    </li>
                                    }
                                }
                            </ul>
                        }
                    }
                    <form asp-action="AdminLoginSubmit" asp-controller="User" method="post">
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="UserName"/>
                            <label for="inputEmail">Ten dang nhap</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="Password" type="password" placeholder="Mat khau" />
                            <label for="inputPassword">Mat khau</label>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="RememberPassword" type="checkbox" value="" />
                            <label class="form-check-label" for="RememberPassword">Luu mat khau</label>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="small" href="password.html">Quen mat khau?</a>
                            <button type="submit" class="btn btn-primary">Dang nhap</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a href="register.html">Dang ky</a></div>
                </div>
            </div>
        </div>
    </div>
</div>